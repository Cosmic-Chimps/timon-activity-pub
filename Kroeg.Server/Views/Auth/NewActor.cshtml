@{
    ViewBag.Title = "Choose actor";
}

@section Header {}


@model Kroeg.Server.Controllers.AuthController.NewActorModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form asp-controller="Auth" asp-action="NewActor" method="post">
    <label asp-for="Username">Username:</label> <input type="text" asp-for="Username" /><br />
    <label asp-for="Name">Name:</label> <input type="text" asp-for="Name" /><br />
    <label asp-for="Summary">Summary:</label> <input type="text" asp-for="Summary" /><br />
    
    <input type="submit" value="Go!"/>
</form>
