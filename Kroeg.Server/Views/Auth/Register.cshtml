@{
    ViewBag.Title = "Register";
    Layout = "_LayoutBootstrap";
}

@model Kroeg.Server.Controllers.AuthController.RegisterViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-md-6 push-md-3">
            <div class="jumbotron">
                <h1>Register</h1>
                <h4><a href="login">Login here</a></h4>
                <form asp-controller="Auth" asp-action="DoRegister" method="post">
                    <label asp-for="Username">Username: </label> <input class="form-control" asp-for="Username"
                        type="text" /><br />
                    <label asp-for="Email">Email: </label> <input class="form-control" asp-for="Email"
                        type="email" /><br />
                    <label asp-for="Password">Password: </label> <input class="form-control" asp-for="Password"
                        type="password" /><br />
                    <label asp-for="VerifyPassword">Password, again: </label> <input class="form-control"
                        asp-for="VerifyPassword" type="password" /><br />
                    <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 push-md-3" style="text-align: right;">
            <small>Instance of <a href="https://github.com/jjchiw/Kroeg">Kroeg</a></small>
        </div>
    </div>
</div>
