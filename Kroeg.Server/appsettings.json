{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "Kroeg": {
    "BaseUri": "https://lol.puckipedia.com/",
    "TokenSigningKey": "Test key, please ignore",
    "RewriteRequestScheme": true
  },
  "EntityNames": {
    "!fallback": "object/${$.type}/${guid}",
    "+object": "+${$.type}",

    "!actor": "users/${$.preferredUsername|guid}",
    "!activity": "activity/${$.type}/${guid}",

    "!following": "+following",
    "!followers": "+followers",
    "!likes": "+likes",
    "!outbox": "+outbox",
    "!inbox": "+inbox",

    "+shares": "+shares",
    "+replies": "+replies"
  },
  "ConnectionStrings": {
    "Default": "Host=localhost;Username=postgres;Password=postgres;Database=activitypub"
  }
}