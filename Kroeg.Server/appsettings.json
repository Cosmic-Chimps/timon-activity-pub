{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "Kroeg": {
    "BaseUri": "https://lol.puckipedia.com/",
    "TokenSigningKey": "Test key, please ignore",
    "RewriteRequestScheme": true
  },
  "EntityNames": {
    "!fallback": "${$.attributedto|$.actor|resolve|%.preferredUsername|shortguid}/status/${shortguid}",
    "+object": "+${$.content|$.type|slug}",

    "!actor": "users/${$.preferredUsername|guid}",

    "!following": "+following",
    "!followers": "+followers",
    "!likes": "+likes",
    "!outbox": "+outbox",
    "!inbox": "+inbox",

    "+shares": "+shares",
    "+replies": "+replies"
  },
  "ConnectionStrings": {
    "Default": "Host=localhost;Username=postgres;Password=postgres;Database=activitypub"
  }
}